<div class="d-flex justify-content-end">
  <%= link_to 'back to homepage', root_path, class: 'btn btn-flat' %>
</div>
<div class = "my-2">
  <% @boats.each do |boat| %>
  <%= link_to boat_path(boat), class:'text-decoration-none' do %>
  <div class="mb-4 d-flex justify-content-center" data-aos="zoom-in">
    <div class="card-trip">
      <%=image_tag boat.pictures_url%>
      <div class="card-trip-infos">
        <div class="p-3 d-flex flex-column">
          <h2 class="my-2"><%= boat.name %></h2>
          <p class="text-muted flex-grow-1"><%= boat.description %></p>
        </div>
        <h2 class="card-trip-pricing flex-shrink-0"><i class="fas fa-euro-sign"><%= boat.price_per_night %></i></h2>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
<div class="d-flex justify-content-end">
  <%= link_to 'back to homepage', root_path, class: 'btn btn-flat' %>
</div>
