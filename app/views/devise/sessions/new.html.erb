<div class="form-pic-wrapper">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class = "listing-card">
      <h2 class="text-muted">Sign in</h2>
      <div class="form-row">
        <div class="form-group col-12 mb-2">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="form-group col-12 mb-2">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="form-group col-12 mb-2">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mb-3">
          <%= f.button :submit, "Log in", class:"new-boat-button"  %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

  <div class="list-pic ">
    <%= image_tag "https://res.cloudinary.com/dr8v0dbbd/image/upload/v1622113654/boats/470146a23f8f852125d523080e4f3c7b.Yacht-Holiday-Indonesia-1_sddenf.jpg"%>
  </div>
</div>
